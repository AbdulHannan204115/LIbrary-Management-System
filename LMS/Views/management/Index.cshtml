@model IEnumerable<LMS.Models.management>
<table border="1" width="1000px">
    <tr>
        <th>ID:</th>
        <th>Name:</th>
        <th>E-Mail:</th>
        <th>Phone-No:</th>
        <th>User-Name:</th>
        <th>Password:</th>
        <th>Confirm-Password:</th>
    </tr>
    @{
        foreach (var item in Model)
        {
            <tr>
                <td>@item.management_id</td>
                <td>@item.name</td>
                <td>@item.email</td>
                <td>@item.phone_no</td>
                <td>@item.user_name</td>
                <td>@item.password</td>
                <td>@item.confirm_password</td>

                <td>@Html.ActionLink("Edit", "edit", new { id = item.management_id })</td>
                <td>@Html.ActionLink("Delete", "delete", new { id = item.management_id })</td>
                <td>@Html.ActionLink("Detail", "detail", new { id = item.management_id })</td>
            </tr>
        }
    }

</table>
<button>@Html.ActionLink("Create", "create")</button>

<br>
<button>@Html.ActionLink("Logout", "logout")</button>
